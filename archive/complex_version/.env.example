# Environment variables for Ayah App
# Copy this to .env and fill in your values

# Application Settings
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development
DEBUG=True
BASE_URL=http://localhost:5000

# Email Configuration (Gmail example)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@ayahapp.com

# Email Schedule Settings
DAILY_EMAIL_TIME=06:00
WEEKLY_EMAIL_DAY=4  # Friday = 4

# Database Configuration
DATABASE_URL=sqlite:///ayah_app.db
# For production PostgreSQL:
# DATABASE_URL=postgresql://ayah_user:password@localhost:5432/ayah_db

# Redis Configuration (for production scaling)
REDIS_URL=redis://localhost:6379/0

# Security Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Logging Configuration
LOG_LEVEL=INFO

# Performance Settings
CACHE_TIMEOUT=3600

# API Rate Limiting
API_RATE_LIMIT=100 per hour

# Docker/Production specific
DB_PASSWORD=secure-db-password-change-me

# SSL/HTTPS (for production)
SSL_CERT_PATH=/etc/ssl/certs/ayahapp.crt
SSL_KEY_PATH=/etc/ssl/private/ayahapp.key

# External Services (if needed)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GOOGLE_ANALYTICS_ID=your-ga-id

# Backup Settings
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30